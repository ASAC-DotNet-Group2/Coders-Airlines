@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Coders_Airlines.Pages.Auth.SignUpModel
@{
}
@*<link rel="stylesheet" href=~/Pages/Auth/SignUp.cshtml.css />
