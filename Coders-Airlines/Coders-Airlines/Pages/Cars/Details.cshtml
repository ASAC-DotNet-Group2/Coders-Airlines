@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Coders_Airlines.Pages.Cars.DetailsModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.ModelYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.ModelYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.FuelType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.FuelType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.RentalCost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.RentalCost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Description)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Thumbnail)
        </dt>
        <dd class="col-sm-10">
             <img src="@Model.Car.Thumbnail" width="150" height="100">
        </dd>
    </dl>
</div>
<div>
    @if(User.Identity.IsAuthenticated && User.IsInRole("administrator"))
            {
    <a asp-page="./Edit" asp-route-id="@Model.Car.ID">Edit</a> 
            }
    
    <a asp-page="./CarRental" asp-route-id="@Model.Car.ID">Rent This Car </a> |
    <a asp-page="./Index">Back to List</a>
</div>
</body>
</html>
