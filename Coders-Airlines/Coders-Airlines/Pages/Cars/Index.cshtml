@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Coders_Airlines.Pages.Cars.IndexModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    @if(User.Identity.IsAuthenticated && User.IsInRole("administrator"))
            {
                <a asp-page="Create">Create New</a>
            }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].ModelYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].FuelType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].RentalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Description)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Thumbnail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Car) {
        <tr>
            <td>
                <a asp-page="./Details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Name)</a>
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FuelType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            
            <td>
                <img src="@item.Thumbnail" width="150" height="100">
            </td>
            <td>
                @if(User.Identity.IsAuthenticated && User.IsInRole("administrator"))
                {
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> 
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                }
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
