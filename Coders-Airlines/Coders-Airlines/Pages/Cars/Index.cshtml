@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Coders_Airlines.Pages.Cars.IndexModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/css/car.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>

    <p>
        @if (User.Identity.IsAuthenticated && User.IsInRole("administrator"))
        {
            <a asp-page="Create">Create New</a>
        }
    </p>

    <section class="wrapper">
        <div class="container-fostrap">
            <div>
                <img src="https://img.freepik.com/premium-vector/car-rental-logo-template-design_316488-1614.jpg" class="fostrap-logo" />
                <h1 class="heading">
                    Welcome to Coders-Airlines CAR Rental Services
                </h1>
            </div>
            <div class="content">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-sm-4">
                            @foreach (var item in Model.Cars)
                            {
                                <div class="card">
                                    <a class="img-card" asp-page = "./Details" asp-route-id="@item.ID">
                                        <img src="@item.Thumbnail" />
                                    </a>
                                    <div class="card-content">
                                        <h4 class="card-title">
                                            <a asp-page = "./Details" asp-route-id="@item.ID">
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </a>
                                        </h4>
                                        <p class="">
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </p>
                                    </div>
                                    <div class="card-read-more">
                                        <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-link btn-block">
                                            Check Offer
                                        </a>
                                    </div>
                                </div>
                            }
                                <div class="card">
                                    <a class="img-card" href="http://www.fostrap.com/2016/03/bootstrap-3-carousel-fade-effect.html">
                                        <img src="https://1.bp.blogspot.com/-Bii3S69BdjQ/VtdOpIi4aoI/AAAAAAAABlk/F0z23Yr59f0/s640/cover.jpg" />
                                    </a>
                                    <div class="card-content">
                                        <h4 class="card-title">
                                            <a href="http://www.fostrap.com/2016/03/bootstrap-3-carousel-fade-effect.html">
                                                @Html.DisplayFor(modelItem => Model.Cars[0].Name)
                                            </a>
                                        </h4>
                                        <p class="">
                                            @Html.DisplayFor(modelItem => Model.Cars[0].Description)
                                        </p>
                                    </div>
                                    <div class="card-read-more">
                                        <a asp-page="/Cars/Details" class="btn btn-link btn-block">
                                            Check Offer
                                        </a>
                                    </div>
                                </div>

                                <div class="card">
                                    <a class="img-card" href="http://www.fostrap.com/2016/03/bootstrap-3-carousel-fade-effect.html">
                                        <img src="https://1.bp.blogspot.com/-Bii3S69BdjQ/VtdOpIi4aoI/AAAAAAAABlk/F0z23Yr59f0/s640/cover.jpg" />
                                    </a>
                                    <div class="card-content">
                                        <h4 class="card-title">
                                            <a href="http://www.fostrap.com/2016/03/bootstrap-3-carousel-fade-effect.html">
                                                @Html.DisplayFor(modelItem => Model.Cars[0].Name)
                                            </a>
                                        </h4>
                                        <p class="">
                                            @Html.DisplayFor(modelItem => Model.Cars[0].Description)
                                        </p>
                                    </div>
                                    <div class="card-read-more">
                                        <a asp-page="/Cars/Details" class="btn btn-link btn-block">
                                            Check Offer
                                        </a>
                                    </div>
                                </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


</body>
</html>
