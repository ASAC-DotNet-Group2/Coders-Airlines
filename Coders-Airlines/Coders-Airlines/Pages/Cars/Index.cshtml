    @{
        ViewData["Title"] = "Display Data";
        string[] TableHeaders = new string[] {"ID", "Car's Name"
                        ,"Model's Year"
                        ,"City"
                        ,"Description"
                        ,"Fuel Type"
                        ,"Rental Cost"};
    }

    <div class="table">
        <table id="myTable">
            <thead>
                <tr>
                    @{
                        foreach (var head in TableHeaders)
                        {
                            <th>
                                @head
                            </th>
                        }
                    }
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model != null)
                    {
                        foreach (var Data in Model.Cars)
                        {
                            <tr onclick="window.location = './Cars/Details/?id=@Data.ID'" ; style="cursor: pointer;">
                                <td>@Data.ID</td>
                                <td>@Data.Name</td>
                                <td>@Data.ModelYear</td>
                                <td>@Data.City</td>
                                <td>@Data.Description</td>
                                <td>@Data.FuelType</td>
                                <td>&#36;@Data.RentalCost</td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
    <p>
