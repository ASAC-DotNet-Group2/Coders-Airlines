@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Coders_Airlines.Pages.Profile.IndexModel
@{
}

<link href="https://use.fontawesome.com/releases/v5.0.1/css/all.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
<link href="~/css/profile.css" rel="stylesheet" />

<div class="container mt-4 mb-4 p-3 d-flex justify-content-center">
    <div class="card p-4">
        <div class=" image d-flex flex-column justify-content-center align-items-center">
            <button class="btn btn-secondary">
                <img src="https://www.freeiconspng.com/thumbs/person-icon/clipart--person-icon--cliparts-15.png" height="100" width="100" />
            </button>
            <span class="name mt-3">@Html.DisplayFor(model => model.user.UserName)</span>
            <div class="d-flex flex-row justify-content-center align-items-center gap-2">
            </div>
            <div class="d-flex flex-row justify-content-center align-items-center mt-3">

            </div>

            <div class="text mt-3">
                <fieldset class="scheduler-border">
                    <legend class="scheduler-border" >Profile Details</legend>
                    <div class="control-group">
                        <label class="control-label input-label" style="font-weight:bold" for="startTime">@Html.DisplayNameFor(model => model.user.Email):</label>
                        <div class="controls bootstrap-timepicker">
                            <input style="background-color: #efefef " type="text" class="datetime" id="startTime" name="startTime" value="@Html.DisplayFor(model => model.user.Email)" readonly />
                            <i class="icon-time"></i>
                        </div>
                        <label class="control-label input-label" style="font-weight:bold" for="startTime">@Html.DisplayNameFor(model => model.user.DateOfBirth):</label>
                        <div class="controls bootstrap-timepicker">
                            <input style="background-color: #efefef " type="text" class="datetime" id="startTime" name="startTime" value="@Html.DisplayFor(model => model.user.DateOfBirth)" readonly />
                            <i class="icon-time"></i>
                        </div>
                        <label class="control-label input-label" style="font-weight:bold" for="startTime">@Html.DisplayNameFor(model => model.user.PhoneNumber):</label>
                        <div class="controls bootstrap-timepicker">
                            <input style="background-color: #efefef " type="text" class="datetime" id="startTime" name="startTime" value="@Html.DisplayFor(model => model.user.PhoneNumber)" readonly />
                            <i class="icon-time"></i>
                        </div>
                        <label class="control-label input-label" style="font-weight:bold" for="startTime">@Html.DisplayNameFor(model => model.user.Gender):</label>
                        <div class="controls bootstrap-timepicker">
                            <input style="background-color: #efefef " type="text" class="datetime" id="startTime" name="startTime" value="@Html.DisplayFor(model => model.user.Gender)" readonly />
                            <i class="icon-time"></i>
                        </div>
                    </div>
                </fieldset>

                
            </div>
            <br>

            <a asp-route-username="@User.Identity.Name" class="button-28" asp-page="/Profile/edit" style="text-decoration:none; color:black">Edit Profile</a>
            <a asp-route-username="@User.Identity.Name" class="button-28" asp-page="/Profile/Flighthistory" style="text-decoration:none; color:black">View Ticket History</a>
            <a asp-route-username="@User.Identity.Name" class="button-28" asp-page="/Profile/carhistory" style="text-decoration:none; color:black">View Car History</a>
            <a asp-route-username="@User.Identity.Name" class="button-28" asp-page="/Profile/apartmenthistory" style="text-decoration:none; color:black">View Apartment History</a>


        </div> 
    </div>
</div>




