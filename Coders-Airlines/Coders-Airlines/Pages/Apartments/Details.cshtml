@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Coders_Airlines.Pages.Apartments.DetailsModel

@{
    ViewData["Title"] = "Details";
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <link href="~/css/SlideShow.css" rel="stylesheet" />
</head>
<body>

    @if (@Model.Apartment != null)
    {
        var apartment = Model.Apartment;
        <section class="py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="row gx-4 gx-lg-5 align-items-center">
                    <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="@apartment.Thumbnail" alt="..." /></div>
                    <div class="col-md-6">

                        <h1 class="display-5 fw-bolder">@apartment.City</h1>
                        <div class="fs-5 mb-5">
                            <h5>Rent/Day: $@apartment.RentalCost</h5>

                        </div>


                        <p class="fs-5 mb-5">@apartment.Description</p>
                        <div class="d-flex">
                            <form>
                                @if (User.Identity.IsAuthenticated && (User.IsInRole("user") || User.IsInRole("administrator")))
                                {
                                    <button class="btn btn-outline-dark flex-shrink-0" type="submit">
                                        <i class="bi-cart-fill me-1"></i>
                                        <a asp-page="./ApartmentRental" asp-route-id="@Model.Apartment.ID" style="text-decoration:none; color:black">Rent</a>

                                    </button>
                                }
                                @if (User.Identity.IsAuthenticated && User.IsInRole("administrator"))
                                {
                                    <button class="btn btn-outline-dark flex-shrink-0" type="submit">
                                        <i class="bi-cart-fill me-1"></i>
                                        <a asp-page="./Edit" asp-route-id="@Model.Apartment.ID" style="text-decoration:none; color:black">Edit</a>
                                    </button>
                                }
                                <button class="btn btn-outline-dark flex-shrink-0" type="submit">
                                    <i class="bi-cart-fill me-1"></i>
                                    <a asp-page="./Index" style="text-decoration:none; color:black">Back to List</a>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>




        <section class="gallery">
            <div class="carousel">

                <input type="radio" id="image1" name="gallery-control" checked>
                <input type="radio" id="image2" name="gallery-control">
                <input type="radio" id="image3" name="gallery-control">
                <input type="radio" id="image4" name="gallery-control">


                <input type="checkbox" id="fullscreen" name="gallery-fullscreen-control" />

                <div class="wrap">

                    <figure>
                        <label for="fullscreen">
                            <img src="https://www.aveliving.com/AVE/media/Property_Images/Florham%20Park/hero/flor-apt-living-(2)-hero.jpg?ext=.jpg" alt="image3" />
                        </label>
                    </figure>

                    <figure>
                        <label for="fullscreen">
                            <img src="https://www.aveliving.com/AVE/media/Property_Images/Florham%20Park/hero/flor-apt-living-(2)-hero.jpg?ext=.jpg" alt="image2" />
                        </label>
                    </figure>

                    <figure>
                        <label for="fullscreen">
                            <img src="https://www.aveliving.com/AVE/media/Property_Images/Florham%20Park/hero/flor-apt-living-(2)-hero.jpg?ext=.jpg" alt="image3" />
                        </label>
                    </figure>

                    <figure>
                        <label for="fullscreen">
                            <img src="https://www.aveliving.com/AVE/media/Property_Images/Florham%20Park/hero/flor-apt-living-(2)-hero.jpg?ext=.jpg" alt="image4" />
                        </label>
                    </figure>
                </div>

                <div class="thumbnails">

                    <div class="slider"><div class="indicator"></div></div>

                    <label for="image1" class="thumb" style="background-image: url('https://www.aveliving.com/AVE/media/Property_Images/Florham%20Park/hero/flor-apt-living-(2)-hero.jpg?ext=.jpg')"></label>

                    <label for="image2" class="thumb" style="background-image: url('https://www.aveliving.com/AVE/media/Property_Images/Florham%20Park/hero/flor-apt-living-(2)-hero.jpg?ext=.jpg')"></label>

                    <label for="image3" class="thumb" style="background-image: url('https://www.aveliving.com/AVE/media/Property_Images/Florham%20Park/hero/flor-apt-living-(2)-hero.jpg?ext=.jpg')"></label>

                    <label for="image4" class="thumb" style="background-image: url('https://www.aveliving.com/AVE/media/Property_Images/Florham%20Park/hero/flor-apt-living-(2)-hero.jpg?ext=.jpg')"></label>
                </div>
            </div>
        </section>
















        <!-- Related items section-->
        <section class="py-5 bg-light">
            <div class="container px-4 px-lg-5 mt-5">
                <h2 class="fw-bolder mb-4">Suggested For You</h2>
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

                    @for (int i = 0; i < 4; i++)
                    {
                        <div class="col mb-5">
                            <div class="card h-100">
                                <!-- Product image-->
                                <img style="height:200px" class="card-img-top" src="@Model.items[i].Thumbnail" alt="..." />
                                <!-- Product details-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        <h5 class="fw-bolder">@Model.items[i].City</h5>
                                    </div>
                                    <div class="text-center">
                                        <!-- Product price-->
                                        Rent/Day: $@Model.items[i].RentalCost
                                    </div>
                                </div>
                                <!-- Product actions-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center"><a asp-page="/ProductDetails/Details" asp-route-id="@Model.items[i].ID" class="btn btn-outline-dark mt-auto">View Product</a></div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>

    }

</body>
</html>












