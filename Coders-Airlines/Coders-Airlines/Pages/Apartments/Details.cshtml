@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Coders_Airlines.Pages.Apartments.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Apartment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apartment.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apartment.City)
        </dd>
        <dt class="col-sm-2">
            Rental Cost
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apartment.RentalCost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apartment.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apartment.Description)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apartment.Thumbnail)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Apartment.Thumbnail"
                      class="card-img-top" alt="..." />
        </dd>
    </dl>
</div>
 <a asp-page="./ApartmentRental" asp-route-id="@Model.Apartment.ID">Rent</a>
<div>
    @if (User.Identity.IsAuthenticated && User.IsInRole("administrator"))
    {
        <a asp-page="./Edit" asp-route-id="@Model.Apartment.ID">Edit</a> <p>| </p>
    }
    <a asp-page="./Index">Back to List</a>
</div>
