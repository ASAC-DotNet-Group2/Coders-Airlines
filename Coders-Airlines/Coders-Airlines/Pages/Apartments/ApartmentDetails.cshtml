@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Coders_Airlines.Pages.Apartments.ApartmentDetailsModel
@{
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

<div class="col-sm-6 col-lg-4 col-lg-2" style="padding : 5px ">
                  <div class="card text-black">
                    <img src="@Model.apartment.Thumbnail"
                      class="card-img-top" alt="..." />
                    <div class="card-body">
                      <div class="text-center">
                        <h5 class="card-title">@Model.apartment.City</h5>
                        <h6 class="card-title">@Model.apartment.RentalCost</h6>
                        <p class="text-muted mb-4">@Model.apartment.Description</p>
                        <p class="text-muted mb-4">Is Available: @Model.apartment.IsAvailable</p>

                      </div>
                      <div class="d-flex justify-content-center font-weight-bold mt-4">
                        <a asp-page="/" asp-route-id="@Model.apartment.ID">Rent</a>
                      </div>
                      <div class="d-flex justify-content-center font-weight-bold mt-4">
                        <a asp-page="/Apartments/Apartments">Back to list</a>
                      </div>
                    </div>
                  </div>
                </div>