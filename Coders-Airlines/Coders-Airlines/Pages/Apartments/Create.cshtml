@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Coders_Airlines.Pages.Apartments.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Apartment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Apartment.City" class="control-label"></label>
                <input asp-for="Apartment.City" class="form-control" />
                <span asp-validation-for="Apartment.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apartment.RentalCost" class="control-label"></label>
                <input asp-for="Apartment.RentalCost" class="form-control" />
                <span asp-validation-for="Apartment.RentalCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apartment.Description" class="control-label"></label>
                <input asp-for="Apartment.Description" class="form-control" />
                <span asp-validation-for="Apartment.Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Apartment.IsAvailable" /> @Html.DisplayNameFor(model => model.Apartment.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Apartment.Thumbnail" class="control-label"></label>
                <input asp-for="Apartment.Thumbnail" class="form-control" />
                <span asp-validation-for="Apartment.Thumbnail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
