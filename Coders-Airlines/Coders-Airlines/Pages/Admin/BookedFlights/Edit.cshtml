@page
@model Coders_Airlines.Pages.Admin.BookedFlights.EditModel

@{
    ViewData["Title"] = "Edit";
}



<!DOCTYPE html>
<html>
<head>
    <title>Page Title</title>
    <link rel="stylesheet" href="~/css/form.css" />

</head>
<body>

    <h2>Edit</h2>

    <h4>Booking</h4>
    <hr />

    <form class='card p-3 bg-light' method="post" style="margin: auto; width: 500px;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Booking.ID" />
        <div class="mb-3 mt-3">
            <div style="display:grid; grid-template-columns: 50% 50%" class="row">
                <div class="col">
                    <label asp-for="Booking.FlightID" class="control-label"></label>
                    <input asp-for="Booking.FlightID" class="form-control">
                    <span asp-validation-for="Booking.FlightID" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Booking.User.UserName" class="control-label"></label>
                    <input asp-for="Booking.User.UserName" class="form-control">
                    <span asp-validation-for="Booking.User.UserName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="mb-3 mt-3">
            <div style="display:grid; grid-template-columns: 50% 50%" class="row">
                <div class="col">
                    <label asp-for="Booking.NumOfSeats" class="control-label"></label>
                    <input asp-for="Booking.NumOfSeats" class="form-control" />
                    <span asp-validation-for="Booking.NumOfSeats" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Booking.NumOfBags" class="control-label"></label>
                    <select asp-for="Booking.NumOfBags" class="form-control">
                        <option value="0">One</option>
                        <option value="1">Two</option>
                        <option value="2">Three</option>
                    </select>
                    <span asp-validation-for="Booking.NumOfBags" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="mb-3 mt-3">
            <label asp-for="Booking.TotalPrice" class="control-label"></label>
            <input asp-for="Booking.TotalPrice" class="form-control" />
            <span asp-validation-for="Booking.TotalPrice" class="text-danger"></span>
        </div>

        <div class="mb-3 mt-3">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
        <div>
            <a asp-page="./AdminFlightBookingList">Back to List</a>
        </div>
    </form>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</body>
</html>