@page
@model Coders_Airlines.Pages.Admin.RentedCars.EditModel

@{
    ViewData["Title"] = "Edit";
}



<!DOCTYPE html>
<html>
<head>
    <title>Page Title</title>
    <link rel="stylesheet" href="~/css/form.css" />

</head>
<body>

    <h2>Edit</h2>

    <h4>CarRental</h4>
    <hr />
    <form class='card p-3 bg-light' method="post" style="margin: auto; width: 500px;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CarRental.ID" />

        <div class="mb-3 mt-3">
            <div style="display:grid; grid-template-columns: 50% 50%" class="row">
                <div class="col">
                    <label asp-for="CarRental.Car.Name" class="control-label"></label>
                    <input asp-for="CarRental.Car.Name" class="form-control">
                    <span asp-validation-for="CarRental.Car.Name" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="CarRental.User.UserName" class="control-label"></label>
                    <input asp-for="CarRental.User.UserName" class="form-control">
                    <span asp-validation-for="CarRental.User.UserName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="mb-3 mt-3">

            <div style="display:grid; grid-template-columns: 50% 50%" class="row">
                <div class="col">
                    <label asp-for="CarRental.From" class="control-label"></label>
                    <input asp-for="CarRental.From" class="form-control" />
                    <span asp-validation-for="CarRental.From" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="CarRental.To" class="control-label"></label>
                    <input asp-for="CarRental.To" class="form-control" />
                    <span asp-validation-for="CarRental.To" class="text-danger"></span>
                </div>
            </div>
            </div>

            <div class="mb-3 mt-3">
                <label asp-for="CarRental.Price" class="control-label"></label>
                <input asp-for="CarRental.Price" class="form-control" />
                <span asp-validation-for="CarRental.Price" class="text-danger"></span>
            </div>

            <div class="mb-3 mt-3">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>

            <div>
                <a asp-page="./AdminCarRental">Back to List</a>
            </div>
    </form>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</body>
</html>

