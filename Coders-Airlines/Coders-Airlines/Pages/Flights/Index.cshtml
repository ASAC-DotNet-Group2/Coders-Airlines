@page
@model Coders_Airlines.Pages.Flights.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<p>
    @if(User.Identity.IsAuthenticated && User.IsInRole("administrator"))
            {
    <a asp-page="Create">Create New</a>

            }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Flights[0].From)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flights[0].To)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flights[0].DepartureDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flights[0].ArrivalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flights[0].ClassType)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Flights[0].SeatsLeft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flights[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Flights)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.From)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.To)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartureDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArrivalDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeatsLeft)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("administrator"))
                {
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> 
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                }
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                </td>
            </tr>
        }
    </tbody>
</table>

